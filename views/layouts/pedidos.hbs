<html lang="en" style="text-align: center;">
{{> head }}

<body>
    {{> hPedidos}}

    <!-- Begin page content -->
    <main role="main" class="container" style="text-align: center;">
        <h1 class="mt-5">Pedidos</h1>
        <table class="table table-primary">
            <thead>
                <tr>
                    <th scope="col">Solicitante</th>
                    <th scope="col">Producto</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each pedidos}}
                <tr>
                    <th scope="col">
                        <ul>
                            <li>{{this.nombreUsuario}}</li>
                            <li>{{this.email}}</li>
                            <li>{{this.telefono}}</li>
                        </ul>
                    </th>
                    <th scope="col">
                        {{#each this.productos}}
                        <ul>
                            <li>{{this.nombre}}</li>
                            <li>{{this.marca}}</li>
                            <li>${{this.precio}}</li>
                        </ul>
                        {{/each}}
                    </th>
                    <th scope="col">
                        <form method="POST" action="/aceptar/{{this._id}}">
                            <button class="btn btn-lg btn-success btn-block" type="submit">
                                Aceptar
                            </button>
                        </form>
                    </th>
                    <th scope="col">
                        <form method="POST" action="/rechazar/{{this._id}}">
                            <button class="btn btn-lg btn-danger btn-block" type="submit">
                                Rechazar
                            </button>
                        </form>
                    </th>
                </tr>

                {{/each}}
            </tbody>
        </table>
        <a class="btn btn-lg btn-dark btn-block" href="/main">
            Volver
        </a>
    </main>

      {{> footer}}

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://getbootstrap.com/docs/4.0/assets/js/vendor/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>