    <main role="main" class="container" style="text-align: center;display:flex; flex-direction:column; justify-content:center; align-items:center">
        <h1>MENSAJES</h1>
      <form class="form-signin" onsubmit="return addMessage(this)">
      <h1 class="h3 mb-3 font-weight-normal">Nuevo mensaje</h1>
