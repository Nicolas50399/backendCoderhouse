      <input
        type="text"
        id="inputMensaje"
        class="form-control"
        placeholder="Mensaje"
        required
        autofocus
      />
      <button class="btn btn-lg btn-primary btn-block" type="submit" value="Enviar">
        Enviar
      </button>
    </form>
    </main>

